# Environment Variables for Koryphaios
# Copy this to .env and fill in your API keys.

# ── LLM Providers ─────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
OPENROUTER_API_KEY=
XAI_API_KEY=

# ── Azure OpenAI ──────────────────────────────────────────────────────────
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# ── AWS Bedrock ───────────────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ── Google Cloud / Vertex AI ──────────────────────────────────────────────
GOOGLE_APPLICATION_CREDENTIALS=

# ── GitHub Copilot ────────────────────────────────────────────────────────
# Auto-detected from ~/.config/github-copilot/hosts.json
# Or set manually:
GITHUB_TOKEN=

# ── Local Model ──────────────────────────────────────────────────────────
LOCAL_ENDPOINT=

# ── Telegram Bridge ──────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_ID=
TELEGRAM_SECRET_TOKEN=
TELEGRAM_POLLING=true

# ── Server ────────────────────────────────────────────────────────────────
KORYPHAIOS_PORT=3000
KORYPHAIOS_HOST=localhost
